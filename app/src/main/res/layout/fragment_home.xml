<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <!--    <Button-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="50dp"-->
    <!--        android:id="@+id/btn1"-->
    <!--        android:text="定位更新"/>-->

    <!--    <Button-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="50dp"-->
    <!--        android:id="@+id/btn2"-->
    <!--        android:text="下载武汉地图"/>-->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.baidu.mapapi.map.MapView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mMV"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/fangxiang">
            </ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_margin="2dp"
                android:background="@drawable/boder">
                <TextClock
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:format12Hour="HH:mm:ss"
                    android:format24Hour="HH:mm:ss"
                    android:hint="显示时间"
                    android:textSize="30sp"/>
                <TextView
                    android:id="@+id/weatherTemperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="phone"
                    android:gravity="left"
                    android:hint="晴  *°C"
                    android:textColor="@color/info_text_color"
                    android:textSize="@dimen/info_text_size" />
                <TextView
                    android:id="@+id/longitudeLatitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="phone"
                    android:gravity="left"
                    android:hint="E118.31°  N38.11°"
                    android:textColor="@color/info_text_color"
                    android:textSize="@dimen/info_text_size" />
                <TextView
                    android:id="@+id/altitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="phone"
                    android:gravity="left"
                    android:hint="海拔：11米"
                    android:textColor="@color/info_text_color"
                    android:textSize="@dimen/info_text_size" />
                <TextView
                    android:id="@+id/velocity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="phone"
                    android:gravity="left"
                    android:hint="速度：10m/s"
                    android:textColor="@color/info_text_color"
                    android:textSize="@dimen/info_text_size" />
                <TextView
                    android:id="@+id/direction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="phone"
                    android:gravity="left"
                    android:hint="方向：东偏北10°"
                    android:textColor="@color/info_text_color"
                    android:textSize="@dimen/info_text_size" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="right"
            android:layout_marginTop="30dp">

            <ImageButton
                android:id="@+id/heat"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/boder"
                android:src="@drawable/heat" />

            <ImageButton
                android:id="@+id/location"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/boder"
                android:src="@drawable/location" />

            <ImageButton
                android:id="@+id/people"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/boder"
                android:src="@drawable/people" />

            <ImageButton
                android:id="@+id/trace"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/boder"
                android:src="@drawable/guiji" />

            <ImageButton
                android:id="@+id/dingwei"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/boder"
                android:src="@drawable/dingwei" />
            <ImageButton
                android:id="@+id/download"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/boder"
                android:src="@drawable/download" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>