<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:divider="@color/black"
    app:dividerPadding="2dp"
    app:showDividers="middle"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/tv_markerclick"
        android:layout_width="182dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:background="@color/white"/>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_markerclickDelete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textSize="15sp"
            android:text="删除"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/btn_makerclickExit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textSize="15sp"
            android:layout_weight="1"
            android:text="退出"
            />
    </LinearLayout>


</androidx.appcompat.widget.LinearLayoutCompat>